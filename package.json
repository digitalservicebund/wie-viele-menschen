    "style:fix": "npm run format:fix && npm run lint:fix",
    "audit:licences": "license-checker-rseidelsohn --production --excludePrivatePackages --onlyAllow 'MIT;BSD-3-Clause;ISC;Apache-2.0;CC-BY-4.0;CC-BY-ND-4.0;Python-2.0;BSD-2-Clause;BlueOak-1.0.0;CC0-1.0;CC-BY-3.0;MPL-2.0' --summary"
