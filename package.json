    "eslint-plugin-prettier": "^5.5.5",
    "license-checker-rseidelsohn": "^4.4.2",
    "playwright": "^1.58.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18"
